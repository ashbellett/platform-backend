{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": ".",
        "outDir": "./build",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "ES6"
        ],
        "allowJs": true,
        "alwaysStrict": true
    },
    "include": [
        "./backend/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
